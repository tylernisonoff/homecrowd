= simple_nested_form_for(@classroom, html: {class: 'form-horizontal'}) do |f|
  = f.input :name, placeholder: 'Bio 101'
  = f.fields_for :incentive_scheme do |i|
    = i.input :create_guide_score, as: :integer, input_html: {value: 0}
    = i.input :update_guide_score, as: :integer, input_html: {value: 0}
    = i.input :view_guide_score, as: :integer, input_html: {value: 0}
  = f.button :submit
